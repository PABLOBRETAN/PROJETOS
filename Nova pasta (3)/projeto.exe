import random

# Configurações básicas do jogo
LARGURA_TABULEIRO = 8
ALTURA_TABULEIRO = 8
TIPOS_DE_PECAS = ['R', 'G', 'B', 'Y', 'P', 'O']  # R=Red, G=Green, B=Blue, Y=Yellow, P=Purple, O=Orange

# Criar o tabuleiro com peças aleatórias
def criar_tabuleiro():
    tabuleiro = []
    for _ in range(ALTURA_TABULEIRO):
        linha = [random.choice(TIPOS_DE_PECAS) for _ in range(LARGURA_TABULEIRO)]
        tabuleiro.append(linha)
    return tabuleiro

# Imprimir o tabuleiro na tela
def imprimir_tabuleiro(tabuleiro):
    for linha in tabuleiro:
        print(' '.join(linha))
    print('\n')

# Checar por matches (grupos de 3 ou mais)
def encontrar_matches(tabuleiro):
    matches = []
    # Checar linhas
    for y in range(ALTURA_TABULEIRO):
        for x in range(LARGURA_TABULEIRO - 2):
            peça = tabuleiro[y][x]
            if peça == tabuleiro[y][x+1] == tabuleiro[y][x+2]:
                matches.append((x, y))
    # Checar colunas
    for x in range(LARGURA_TABULEIRO):
        for y in range(ALTURA_TABULEIRO - 2):
            peça = tabuleiro[y][x]
            if peça == tabuleiro[y+1][x] == tabuleiro[y+2][x]:
                matches.append((x, y))
    return matches

# Main loop do jogo
def jogar():
    tabuleiro = criar_tabuleiro()
    imprimir_tabuleiro(tabuleiro)

    while True:
        matches = encontrar_matches(tabuleiro)
        if not matches:
            print("Não há mais matches. Jogo terminado!")
            break
        else:
            print("Matches encontrados:", matches)
            # Aqui você removeria os matches e preencheria o tabuleiro novamente
            # Para simplificar, vamos apenas terminar o jogo
            break

jogar()
